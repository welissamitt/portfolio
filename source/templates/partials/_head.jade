head
  meta(charset="utf8")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  link(rel="shortcut icon" href="/images/favicon.ico")

  link(rel="stylesheet", href="/styles/lib/pure.min.css")
  link(rel="stylesheet", href="/styles/lib/pure-grids.min.css")
  link(rel="stylesheet", href="/styles/main.css")

  script(src="/scripts/lib/jquery.min.js")

  //- env vars
  script.
    var ENV_VARS = {
      googleAnalyticsKey: "#{googleAnalyticsKey}"
    };

  //- load GA after ENV_VARS have been defined
  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', ENV_VARS.googleAnalyticsKey, 'auto');
    ga('send', 'pageview');


  //- load pretty fonts
  link(href='http://fonts.googleapis.com/css?family=Lato:100,400,900|Merriweather:400,900' rel='stylesheet' type='text/css')


  //- head yield tag needs to come before head variables are used
  //- e.g. title, description
  block head

  title #{title}
  meta(name="description",        content="#{description}")
  
  //- facebook og tags
  meta(property="og:title"        content="#{title}")
  meta(property="og:url"          content="http://example.com" + url)
  meta(property="og:description"  content="#{description}")
  meta(property="og:type"         content="article")
  meta(property="og:site_name"    content="example.com")

  //- twitter card tags
  meta(name="twitter:card"        content="summary")
  meta(name="twitter:site"        content="@example")
  meta(name="twitter:url"         content="http://example.com" + url)
  meta(name="twitter:title"       content="#{title}")
  meta(name="twitter:description" content="#{description}")
