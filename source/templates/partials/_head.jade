head
  meta(charset="utf8")
  meta(property="og:title" content="Melissa Witt and a portfolio")
  meta(property="og:type" content="website")
  meta(property="og:url" content="http://melissawitt.com")
  meta(property="og:image" content="images/site-thumb.png")
  meta(property="og:image:width" content="1146")
  meta(property="og:image:height" content="932")
  meta(property="og:description" content="I'm a designer based in NYC who also gets dirty with code.")
  link(rel="shortcut icon" href="/images/favicon.ico")

  link(rel="stylesheet", href="/styles/lib/pure.min.css")
  link(rel="stylesheet", href="/styles/lib/pure-grids.min.css")
  link(rel="stylesheet", href="/styles/main.css")

  script(src="/scripts/lib/jquery.min.js")

  //- env vars
  script.
    var ENV_VARS = {
      googleAnalyticsKey: "#{googleAnalyticsKey}"
    };

  //- load GA after ENV_VARS have been defined
  script.
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', ENV_VARS.googleAnalyticsKey, 'auto');
    ga('send', 'pageview');


  //- load pretty fonts
  script(src='https://use.typekit.net/qtq5kro.js')
  script.
    try{Typekit.load({ async: true });}catch(e){}


  //- head yield tag needs to come before head variables are used
  //- e.g. title, description
  block head

  title Melissa Witt UX/UI
  meta(name="description",        content="#{description}")
  
  //- facebook og tags
  meta(property="og:title"        content="Melissa Witt UX/UI")
  meta(property="og:url"          content="http://melissawitt.com" + url)
  meta(property="og:description"  content="I'm a designer based in NYC who also gets dirty with code.")
  meta(property="og:type"         content="article")
  meta(property="og:site_name"    content="melissawitt.com")

  //- twitter card tags
  meta(name="twitter:card"        content="summary")
  meta(name="twitter:site"        content="@example")
  meta(name="twitter:url"         content="http://melissawitt.com" + url)
  meta(name="twitter:title"       content="Melissa Witt UX/UI")
  meta(name="twitter:description" content="I'm a designer based in NYC who also gets dirty with code.")
